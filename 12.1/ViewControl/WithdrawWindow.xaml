<Window x:Class="_12._2.WithdrawWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12._2"
        mc:Ignorable="d"
        Title="WithdrawWindow" Height="131" Width="191">
    <Grid>
        <StackPanel Margin="0,10,0,10">
            <TextBlock x:Name="enterAmountTextBlock" TextWrapping="Wrap" Text="Введите сумму снятия" Width="160"/>
            <TextBox x:Name="enterAmountTextBox" TextWrapping="Wrap" Text="" Width="160" PreviewTextInput="EnterAmountTextBox_PreviewTextInput"/>
            <Button x:Name="withdrawButton" Content="Снять" Width="160" Click="WithdrawButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
